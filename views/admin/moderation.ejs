<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
    </head>
    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <div style="margin:auto; width:35%">
                <form action="/admin/moderation/users" class="form-control" method="POST">
                    <button class="btn" type="submit">Generate Users Report</button>
                </form>
                <form action="/admin/moderation/orders" class="form-control" method="POST">
                    <button class="btn" type="submit">Generate Orders Report</button>
                </form>
            </div>
            <% if (prods.length > 0) { %>
                <div class="grid">
                    <% for (let product of prods) { %>
                        <article class="card product-item">
                            <header class="card__header">
                                <h1 class="product__title">
                                    <%= product.title %>
                                </h1>
                            </header>
                            <div class="card__image">
                                <img src="<%= product.imageUrl %>" alt="<%= product.title %>">
                            </div>
                            <div class="card__content">
                                <h2 class="product__price">$
                                    <%= product.price %>
                                </h2>
                                <p class="product__description">
                                    <%= product.description %>
                                </p>
                            </div>
                            <div class="card__actions">
                                <form action="/admin/moderation/delete-product" method="POST">
                                    <input type="hidden" value="<%= product.id %>" name="productId">
                                    <button class="btn" type="submit">Delete</button>
                                </form>

                            </div>
                        </article>
                        <% } %>
                </div>
                <% }%>
        </main>
        <%- include('../includes/end.ejs') %>